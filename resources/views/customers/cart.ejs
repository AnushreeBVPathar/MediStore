<section class="cart py-16">
    <% if(session.cart) { %>
    <div class="order container mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cart2.png" alt="" style="width:25px;">
            <h1 class="font-bold ml-4 text-2xl">Order summary</h1>
        </div>
        <div class="medicine-list">
            <% for(let medicine of Object.values(session.cart.items)) { %>
            <div class="flex items-center my-8">
                <img class="w-24" src="/img/<%= medicine.item.image %>" alt="">
                <div class="flex-1 ml-4">
                    <h1><%= medicine.item.name %></h1>
                    <span><%= medicine.item.noofcapsule%> capsules</span>
                </div>
                <span class="flex-1"><%= medicine.qty%>sheet</span>
                <span class="font-bold">‚Çπ <%= medicine.item.price * medicine.qty %></span>
            </div>
            <% } %>
            <hr>
            <div class="text-right py-4">
                <div>
                    <span class="text-lg font-bold">Total Amount:</span>
                    <span class="amount text-2xl font-bold ml-2">‚Çπ<%= session.cart.totalPrice %></span>
                </div>
                <div>
                    <form action="" class="mt-12">
                        <input class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="Phone Number">
                    </form>
                    <form action="">
                        <input class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Address">
                    </form>
                    <!-- <div>
                        <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Order Now</button>
                    </div> -->
                </div>
                <a href="/login" class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Login to continue</a>
            </div>
           
        </div>
    </div>
    <% } else { %>
    <div class="empty-cart py-px">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart Empty üòê</h1>
        <p class="text-gray-500 text-lg mb-2">You probably haven't ordered any medicines yet.<br>
            To order a medicine, go to the main page.</p>
            <img class="w-2/5 mx-auto" src="/img/emptycart1.jpg" alt="empty-cart" style="width: 20%;">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go Back</a>
        </div>
    </div>
    <% } %>
</section>