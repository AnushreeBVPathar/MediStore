                    <h2 class="mb-4 text-lg "><%=medicine.name%></h2>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs"><%=medicine.noofcapsule %> capsules</span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">â‚¹ <%=medicine.price %></span>
                        <button data-medicine="<%= JSON.stringify(medicine)%>"  class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>
            </div>
       <% }) %>
       
   
    </div>
